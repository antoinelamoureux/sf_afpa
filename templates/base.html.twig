<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">{% endblock %}
    </head>
    <body>
        {% block header %}
        {% endblock %}
        {% block message %}
        {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
        {{ message }}
        </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
        {{ message }}
        </div>
        {% endfor %}
        {% endblock %}
        <div class="container">
        {% block body %}
        Je suis le block BODY de base.html.twig
        {% endblock %}
        </div>
        {% block footer %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
