<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block header %}
       <nav class="navbar navbar-expand-lg navbar-light bg-primary">
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="{{ path('home') }}">Home </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('post_index') }}">Articles</a>
      </li>
    </ul>
    {% if(is_granted('IS_AUTHENTICATED_FULLY')) %}
    {{ app.user }}
    &emsp;
    <a class="deconnection" href="{{ path('app_logout') }}">Se d√©connecter </a>
    {% else %}
    <a class="deconnection" href="{{ path('app_login') }}">Se connecter </a>
    {% endif %}
  </div>
</nav>
</nav>
        {% endblock %}
        {% block message %}
        {% for message in app.flashes('danger') %}
        <div class="alert alert-danger">
        {{ message }}
        </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
        {{ message }}
        </div>
        {% endfor %}
        {% endblock %}
        <div class="container">
        {% block body %}
        Je suis le block BODY de base.html.twig
        {% endblock %}
        </div>
        {% block footer %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
